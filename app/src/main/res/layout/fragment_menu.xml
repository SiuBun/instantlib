<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B48787"
    android:layout_centerHorizontal="true"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_bp_download"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/zo_50dp"
        android:text="download"
        android:textAllCaps="false"
        android:textSize="@dimen/zo_14sp" />


    <ProgressBar
        android:id="@+id/progress_bar_init"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zo_30dp"
        android:layout_marginLeft="@dimen/zo_20dp"
        android:layout_marginRight="@dimen/zo_20dp"
        android:max="100" />


</LinearLayout>